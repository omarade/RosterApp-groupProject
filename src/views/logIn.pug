doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Simple Login Form
    link(href='css/bootstrap.min.css' type='text/css' rel='stylesheet')
    link(href='css/bootstrap-theme.min.css' type='text/css' rel='stylesheet')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
  body
    .container
      h2.text-center #{message}
      br 
      br 
      br 
      br 
      .col-md-4.col-md-offset-4
        section
          .panel.panel-default.top.caja
            .panel-body
              h3.text-center Worker Shift 
              form.form(action='/login', method='post', accept-charset='utf-8', role='form')
                .input-group.input-group-lg
                  span#sizing-addon1.input-group-addon
                    i.fa.fa-user(aria-hidden='true')
                  input#email.form-control(type='email', name='email', placeholder='Email', aria-describedby='sizing-addon1', required='')
                br
                .input-group.input-group-lg
                  span#sizing-addon1.input-group-addon
                    i.fa.fa-key(aria-hidden='true')
                  input#password.form-control(type='password', name='password', placeholder='Password', aria-describedby='sizing-addon1', required='')
                br
                button.btn.btn-primary.btn-block(type='submit') login
                

