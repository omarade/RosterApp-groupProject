doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Simple Login Form
    link(href='css/bootstrap.min.css' type='text/css' rel='stylesheet')
    link(href='css/bootstrap-theme.min.css' type='text/css' rel='stylesheet')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
  body
  #wrap.container
  .row
    .col-md-4.col-md-offset-4

      form.form(action='/addWorker', method='post', accept-charset='utf-8', role='form')
        legend Creat a new worker account here
        input.form-control.input-lg(type='text', name='names', value='', placeholder='Name')
        br
        input.form-control.input-lg(type='text', name='email', value='', placeholder='Your Email')
        br
        input.form-control.input-lg(type='password', name='password', value='', placeholder='Password')
        .row
          .col-xs-4.col-md-4
            label Account typed
            select.form-control.input-lg(name='type')
              option(value='true') Shift manager
              option(value='false') Worker
        br
        span.help-block
          | Creating account you will add a new worker to in your database. 
        button.btn.btn-lg.btn-primary.btn-block.signup-btn(type='submit')
          | Create new worker  account

